<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background12">

    <RelativeLayout
        android:id="@+id/activity_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.collegeproject.dev3dot.appoinment.CalenderActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.stacktips.view.CustomCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="330dp" />



            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Period Days"
                    android:textColor="@color/periodDayBackground"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fertile Days"
                    android:textColor="@color/fertileDayBackground"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ovulation Date"
                    android:textColor="@color/ovulationDayBackground"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
